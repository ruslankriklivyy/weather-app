{
  "expo": {
    "name": "weather-app",
    "slug": "weather-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow weatherapp to use your location."
        }
      ],
      ["expo-font", {
        "fonts": [
          "node_modules/@expo-google-fonts/rubik/Rubik_400Regular.ttf",
          "node_modules/@expo-google-fonts/rubik/Rubik_500Medium.ttf",
          "node_modules/@expo-google-fonts/rubik/Rubik_600SemiBold.ttf",
          "node_modules/@expo-google-fonts/rubik/Rubik_700Bold.ttf"
        ]
      }]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ],
      "package": "com.haurslan.weatherapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "0a8bdb66-2684-4ec4-ae60-16737cfb900e"
      }
    }
  }
}
